<script>
    $(document).ready(function () {
        $('.sortable').sortable({
            axis: "y",
            items: ".sortable-item",
            tolerance: 'pointer',
            cursor: 'move',
            handle: '.move',
            update: function () {
                console.log($(this))
                var data = $(this).sortable('toArray');
                $.ajax({
                    url: '{{ path('te_sortable_sort') }}',
                    type: 'post',
                    data: {sortableData: data,entity: "{{ entity }}"},
                    success: function (e) {
                        console.log(e);
                    }
                })
            }
        });
    })
</script>
