{% extends '@TwinElementsAdmin/base.html.twig' %}

{% block body %}
    <div class="container-fluid d-flex align-items-center justify-content-center" style="height:100vh;">
        <div>
            {% for flashError in app.flashes('reset_password_error') %}
                <div class="alert alert-danger" role="alert">{{ flashError }}</div>
            {% endfor %}
            <div id="cms-login-form" class="d-flex align-items-center justify-content-center flex-column px-12 py-14">
                <div class="h-100 w-100">
                    <img src="{{ asset('/bundles/twinelementsadmin/img/logo.png') }}" alt="Jellinek CMS" class="mb-12">

                    {{ form_start(requestForm) }}
                    <div class="form-group d-flex align-items-center">
                        {{ form_label(requestForm.email) }}
                        {{ form_widget(requestForm.email) }}
                        {{ form_help(requestForm.email) }}
                    </div>

                    <div class="d-flex justify-content-center">
                        <button class="btn btn-primary">{{ "admin.forgot_password_form.send_password_reset_email"|trans }}</button>
                    </div>
                    {{ form_end(requestForm) }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
