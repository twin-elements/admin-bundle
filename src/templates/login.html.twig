{% extends '@TwinElementsAdmin/base.html.twig' %}

{% block body %}
    <div class="container-fluid d-flex align-items-center justify-content-center" style="height:100vh;">
        <div>

            {% if error %}
                <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %}
            <div id="cms-login-form" class="d-flex align-items-center justify-content-center flex-column px-12 py-14">
                <div class="h-100 w-100">
                    <img src="{{ asset('/bundles/twinelementsadmin/img/logo.png') }}" alt="Jellinek CMS" class="mb-12">
                    <form action="{{ path('security_login') }}" method="POST">
                        <div class="form-group d-flex align-items-center">
                            <label for="username">{{ "admin.email"|translate_admin }}:</label>
                            <input type="text" id="username" name="email" value="{{ last_username }}"
                                   class="form-control" required="required"/>
                        </div>
                        <div class="form-group d-flex align-items-center">
                            <label for="password">Has≈Ço:</label>
                            <input type="password" id="password" name="password" class="form-control" required="required"/>
                        </div>
                        <input type="hidden" name="_target_path" value="{{ app.request.get('redirect_to') }}"/>
                        <input type="hidden" name="_csrf_token"
                               value="{{ csrf_token('authenticate') }}"/>
                        <div class="d-flex align-items-center justify-content-center mt-8">
                            <button type="submit" class="btn btn-primary">{{ "login"|translate_admin }}</button>
                            <a class="btn btn-link" href="{{ path('admin_forgot_password_request') }}">{{ "admin.forgot_password_form.forgot_password"|translate_admin }}</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
